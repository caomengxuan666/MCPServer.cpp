;You can Edit this file in the project source directory to cover the autogen one
;We would copy this ini through cmake and cover the default generated one
;So you do not need to go to build directory to edit the ini
;This is a example one,you can copy it and rename it to config.ini to make it work
title=MCP Server Configuration
[server]
;IP address the server binds to
ip=0.0.0.0
;Legacy network port for incoming connections
port=6666
;HTTP transport port (set to 0 to disable HTTP)
http_port=6666
;HTTPS transport port (set to 0 to disable HTTPS)
https_port=6667
;Logging severity (trace, debug, info, warn, error)
log_level=trace
;Filesystem path for log storage
log_path=logs/mcp_server.log
;Maximum size per log file in bytes
max_file_size=10485760
;Maximum number of rotated log files
max_files=10
;Directory containing plugin modules
plugin_dir=plugins
;Enable stdio transport (1=enable, 0=disable)
enable_stdio=1
;Enable HTTP transport (1=enable, 0=disable)
enable_http=1
;Enable HTTPS transport (1=enable, 0=disable)
enable_https=1
;SSL certificate file path (required for HTTPS)
ssl_cert_file=certs/server.crt
;SSL private key file path (required for HTTPS)
ssl_key_file=certs/server.key
;SSL Diffie-Hellman parameters file path (required for HTTPS)
ssl_dh_params_file=certs/dh2048.pem

[plugin_hub]
;Base URL for plugin server
plugin_server_baseurl=http://47.120.50.122
;Port for plugin server
plugin_server_port=6680
;Route for fetching latest plugin info
latest_fetch_route=/self/latest/info
;Route for downloading plugin
download_route=/self/latest/download
;Directory for installing plugins
plugin_install_dir=plugins_install
;Directory for enabling plugins
plugin_enable_dir=plugins
tools_enable_dir=configs
tools_install_dir=plugins_install
